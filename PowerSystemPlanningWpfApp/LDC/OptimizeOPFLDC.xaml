<Window x:Class="PowerSystemPlanningWpfApp.LDC.OptimizeOPFLDC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerSystemPlanningWpfApp.LDC"
        xmlns:localUtils="clr-namespace:PowerSystemPlanningWpfApp.ControlUtils"
        mc:Ignorable="d"
        Title="Optimize LDC OPF" Height="300" Width="300" WindowState="Maximized">
    <Grid>
        <GroupBox Header="Load Duration Curve" Grid.ColumnSpan="2">
            <localUtils:CustomDataGrid x:Name="dgLDC" ItemsSource="{Binding}" Margin="4,10,4,4" AutoGenerateColumns="False">
                <DataGrid.AlternatingRowBackground>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}"/>
                </DataGrid.AlternatingRowBackground>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Duration [hours]" Binding="{Binding Duration}" />
                    <DataGridTextColumn Header="Load multiplier" Binding="{Binding LoadMultiplier}" />
                </DataGrid.Columns>
            </localUtils:CustomDataGrid>
        </GroupBox>
    </Grid>
</Window>
