<UserControl x:Class="PowerSystemPlanningWpfApp.Model.PowerSystemStateEditor.PowerSystemStateCollectionDgEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerSystemPlanningWpfApp.Model.PowerSystemStateEditor"
             xmlns:localUtils="clr-namespace:PowerSystemPlanningWpfApp.ControlUtils"
             xmlns:pwsModel="clr-namespace:PowerSystemPlanning.BindingModels.StateBinding;assembly=PowerSystemPlanning"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:StateCollectionDgEditorViewModel}">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left" Margin="5,0,5,5">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock Text="States" FontWeight="Bold" Margin="5,5,5,5" />
                <localUtils:ImageTextBlock Width="370" HorizontalAlignment="Left" Margin="5,0,0,0">
                    <localUtils:ImageTextBlock.MessageForTextBlock>
                        First define the states in the following table. 
                        Then press the "Edit" button to simulatenously edit all states in the right table.
                    </localUtils:ImageTextBlock.MessageForTextBlock>
                </localUtils:ImageTextBlock>
                <localUtils:ImageTextButton ToolTip="Edit" Text="Edit" Margin="5,5,5,5"
                                            Command="{Binding EditStatesCommand}" 
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            Image="pack://application:,,,/PowerSystemPlanningWpfApp;component/Resources/Edit_16x.png" />
            </StackPanel>
            <localUtils:CustomDataGrid ItemsSource="{Binding MyStatesDefinition}" 
                               AutoGenerateColumns="False" ColumnHeaderStyle="{StaticResource DgColumnHeaderWrap}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Scenario" 
                                        Binding="{Binding ScenarioName}" 
                                        Width="90" />
                    <DataGridTextColumn Header="State Name" 
                                        Binding="{Binding StateName}" 
                                        Width="150" />
                    <DataGridTextColumn Header="Duration (hours)" 
                                        Binding="{Binding Duration, StringFormat=N1}" 
                                        Width="150" />
                </DataGrid.Columns>
            </localUtils:CustomDataGrid>
        </DockPanel>
        <localUtils:CustomDataGrid ItemsSource="{Binding MyStateCollectionDataTable.DtNodesStates}" 
                               
                                   AutoGenerateColumns="True" ColumnHeaderStyle="{StaticResource DgColumnHeaderWrap}"
                               
                                   CanUserAddRows="False" CanUserDeleteRows="False">
        </localUtils:CustomDataGrid>
    </DockPanel>
</UserControl>
