<Window x:Name="runOPFWindow" x:Class="PowerSystemPlanningWpfApp.OPF.RunOPFWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerSystemPlanningWpfApp.OPF"
        mc:Ignorable="d"
        Title="Run Optimal Power Flow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="210*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnRunOPF" Content="Run Optimal Power Flow" Grid.Row="0" Width="140" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2.5" Click="btnRunOPF_Click" />
        <Label Content="Total Generation Cost:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBox x:Name="tbTotalCost" Grid.Row="1" Width="75" Height="25" Margin="131.67,0,0,0" HorizontalAlignment="Left" d:LayoutOverrides="Width" VerticalAlignment="Center" TextAlignment="Right" />
        <ListView x:Name="lvPowerGenerated" Grid.Row="2" Margin="0,30,0,10" />
        <Label Content="Power generated:" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</Window>
