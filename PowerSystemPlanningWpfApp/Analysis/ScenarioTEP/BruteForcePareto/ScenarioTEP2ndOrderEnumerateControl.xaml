<UserControl x:Class="PowerSystemPlanningWpfApp.Analysis.ScenarioTEP.BruteForcePareto.ScenarioTEP2ndOrderEnumerateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerSystemPlanningWpfApp.Analysis.ScenarioTEP.BruteForcePareto"
             xmlns:localUtils="clr-namespace:PowerSystemPlanningWpfApp.ControlUtils"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600" Background="White"
             d:DataContext="{d:DesignInstance local:ScenarioTEPParetoViewModel}">
    <DockPanel LastChildFill="True">
        <!--Number of possible alternatives-->
        <!--Number of possible alternatives-->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"  Margin="0,0,0,5">
            <TextBlock Text="{Binding MyScenarioTEPModel.TransmissionExpansionPlansCount}" />
            <TextBlock Text=" possible transmission expansion plans." />
        </StackPanel>
        <!--Action buttons: build pareto-frontier-->
        <Button Command="{Binding BuildParetoFrontier}" HorizontalAlignment="Left" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://application:,,,/PowerSystemPlanningWpfApp;component/Resources/Run_32x.png" Width="16" />
                <TextBlock Margin="5,0,5,0">Build Exact Pareto Frontier</TextBlock>
            </StackPanel>
        </Button>
        <localUtils:ImageTextBlock MessageForTextBlock="Building the pareto-frontier by exhaustive enumeration is computationally expensive." Margin="0,5,0,5" DockPanel.Dock="Top" />
        <!--Enumeration/evaluation results-->
        <localUtils:ImageTextBlock MessageForTextBlock="Double-click one plan from the above grid in order to inspect details." Margin="0,5,0,5" DockPanel.Dock="Bottom" />
        <localUtils:CustomDataGrid ItemsSource="{Binding TepAlternativesInParetoFront, Mode=OneWay}" AutoGenerateColumns="False" IsReadOnly="True"
                                   localUtils:MyCommands_DgDblClick.DataGridDoubleClickCommand="{Binding DgTepPareto_DoubleClick}" x:Name="dgTEPParetoFront">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="Plan Id" Binding="{Binding PlanId}" />-->
                <DataGridTextColumn Header="New Transmission Lines Count" Binding="{Binding BuiltTransmissionLines.Count}" Width="110" />
                <DataGridTextColumn Header="Investment Cost (MUS$)" Binding="{Binding TotalInvestmentCost}" Width="90" />
                <DataGridTextColumn Header="Transmission lines" Binding="{Binding BuiltTransmissionLinesNames}" Width="90" />
                <DataGridTextColumn Header="Expected costs (MMUS$)" Binding="{Binding ExpectedTotalCosts, StringFormat=C}" Width="90" ElementStyle="{StaticResource ResourceKey=CellRightAlign}" />
                <!--Total costs under each scenario will be bind by the view's code-behind-->
            </DataGrid.Columns>
        </localUtils:CustomDataGrid>
    </DockPanel>
</UserControl>
