<Button Name="MyImageButton" Margin="1,1,1,1"
    x:Class="PowerSystemPlanningWpfApp.ControlUtils.ImageTextButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerSystemPlanningWpfApp.ControlUtils"
             mc:Ignorable="d" 
             d:DesignHeight="20">
    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding ElementName=MyImageButton, Path=Image}" 
               Width="16" />
        <TextBlock Text="{Binding ElementName=MyImageButton, Path=Text}"
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="1,1,1,1" />
    </StackPanel>
</Button>
